{
  "compilerOptions": {
    "target": "ES2020",
    "module": "node16",
    "moduleResolution": "node16",
    "rootDir": "./",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["server.ts", "api/**/*.ts", "apiRoutes/**/*.ts", "lib/**/*.ts", "middleware/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
